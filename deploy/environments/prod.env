# Production Environment Configuration
# Used for: loopcloser.io

# Environment identifier
ENV=production
APP_ENV=production

# Service configuration
SERVICE_NAME=loopcloser-prod
REGION=us-central1

# Database (SQLite with GCS mount)
DATABASE_URL=sqlite:////data/loopcloser.db
GCS_BUCKET=loopcloser-db-prod

# Application URLs
BASE_URL=https://loopcloser.io

# Cloud Run settings
MIN_INSTANCES=1
MAX_INSTANCES=10
MEMORY=1Gi
CPU=2
TIMEOUT=300
CONCURRENCY=100

# Email configuration (Brevo for real emails)
EMAIL_PROVIDER=brevo
# BREVO_API_KEY, BREVO_SENDER_EMAIL, BREVO_SENDER_NAME set via GitHub Secrets

# Logging
LOG_LEVEL=WARNING

# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Feature flags
ENABLE_DEBUG_TOOLBAR=false
ENABLE_DEMO_MODE=false

# Production-specific security
PRODUCTION=true


