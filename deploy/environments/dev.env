# Development Environment Configuration
# Used for: dev.loopcloser.io

# Environment identifier
ENV=development
APP_ENV=dev

# Service configuration
SERVICE_NAME=loopcloser-dev
REGION=us-central1

# Database (SQLite with GCS mount)
DATABASE_URL=sqlite:////data/loopcloser.db
GCS_BUCKET=loopcloser-db-dev

# Application URLs
BASE_URL=https://dev.loopcloser.io

# Cloud Run settings
MIN_INSTANCES=0
MAX_INSTANCES=2
MEMORY=512Mi
CPU=1
TIMEOUT=300
CONCURRENCY=80

# Email configuration (Ethereal for testing)
EMAIL_PROVIDER=ethereal
# ETHEREAL_USER and ETHEREAL_PASS set via GitHub Secrets

# Email whitelist (allow test domains in dev)
EMAIL_WHITELIST=*@ethereal.email,*@mocku.test,*@example.com,*@test.local

# Logging
LOG_LEVEL=DEBUG

# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Feature flags
ENABLE_DEBUG_TOOLBAR=true
ENABLE_DEMO_MODE=true


