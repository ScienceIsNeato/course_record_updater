{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "bootstrap": "readonly",
    "fabric": "readonly"
  },
  "overrides": [
    {
      "files": ["tests/javascript/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "ignorePatterns": ["htmlcov/", "build/", "coverage/", "logs/", ".slopmop/"]
}
