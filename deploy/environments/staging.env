# Staging Environment Configuration
# Used for: staging.loopcloser.io

# Environment identifier
ENV=staging
APP_ENV=staging

# Service configuration
SERVICE_NAME=loopcloser-staging
REGION=us-central1

# Database (SQLite with GCS mount)
DATABASE_URL=sqlite:////data/loopcloser.db
GCS_BUCKET=loopcloser-db-staging

# Application URLs
BASE_URL=https://staging.loopcloser.io

# Cloud Run settings
MIN_INSTANCES=0
MAX_INSTANCES=4
MEMORY=512Mi
CPU=1
TIMEOUT=300
CONCURRENCY=80

# Email configuration (Ethereal for safe testing)
EMAIL_PROVIDER=ethereal
# ETHEREAL_USER and ETHEREAL_PASS set via GitHub Secrets

# Logging
LOG_LEVEL=INFO

# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Feature flags
ENABLE_DEBUG_TOOLBAR=false
ENABLE_DEMO_MODE=true


