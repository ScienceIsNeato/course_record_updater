# Course Record Updater - Coverage Configuration
# 80% coverage threshold for enterprise quality gate

[run]
branch = True
source = .
omit =
    # Virtual environments and dependencies
    venv/*
    */venv/*
    .venv/*
    */.venv/*
    */site-packages/*

    # Test files themselves
    tests/*
    */tests/*

    # Build and development files
    setup.py
    */migrations/*
    cursor-rules/*
    logs/*
    __pycache__/*
    */__pycache__/*
    *.pyc
    .git/*
    .pytest_cache/*
    htmlcov/*

    # Utility scripts (not core application logic)
    scripts/*
    generate_sample_docx.py

    # CLI entry points (tested via integration)
    import_cli.py
    
    # Constants file (static definitions, no logic to test)
    constants.py

[report]
# 75% coverage threshold - pragmatic quality gate  
fail_under = 75
show_missing = true
skip_covered = false
precision = 2

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    # Don't complain about missing debug-only code
    def __str__
    def __unicode__
    # Don't complain if tests don't hit defensive assertion code
    raise NotImplementedError
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:

[html]
directory = htmlcov
title = Course Record Updater Coverage Report

[xml]
output = coverage.xml
